{
    "compilerOptions": {
      "target": "es2019",
      "module": "esnext",
      "moduleResolution": "node",

      "lib": ["es2021", "dom"],

      "skipLibCheck": true,
      "strict": true,
      "noUnusedLocals": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,

      "sourceMap": true,
      "inlineSources": true,

      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,

      "newLine": "lf",

      "declaration": true,
      "jsx": "react"
    }
}
